<table id="tablaSucursales" class="table table-striped table-bordered table-hover">
    <thead class="">
        <tr>
            <th>ID</th>
            <th>Sucursal</th>
            <th>Usuario</th>
            <th>Default</th>
            <th>Registra</th>
            <th>Fecha</th>          
            <th style="width: 80px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for row in listado %}
            <tr>
                <td>{{ row.idgeneral }}</td>
                <td>{{ row.sucursal }}</td>
				<td>{{ row.usuario }}</td>
                <td>{{ row.Def }}</td>
                <td>{{ row.usuario }}</td>
                <td>{{ row.Fecha|date('Y-m-d') }}</td>
               
                <td class="text-center">
                    <a href="{{ path('postActionUxSucursales', {id: row.idgeneral}) }}"
                       class="btn btn-sm btn-primary"
                       title="Editar">
                        <i class="fa fa-edit"></i>
                    </a>
					<button type="button"
						class="btn btn-sm btn-danger"
						title="Borrar"
						onclick="borrarUxSucursal({{ row.idgeneral }})">
						<i class="fa fa-trash"></i>
					</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center text-muted">
                    No existen sucursales registradas
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
