<div class="row">

    <div class="col-md-4">
        <label>Emisor</label>
        <input type="text" id="emisor" class="form-control"
               value="{{ sucursal.emisor ?? '' }}">
    </div>

    <div class="col-md-4">
        <label>RUC</label>
        <input type="text" id="ruc" class="form-control"
               value="{{ sucursal.ruc ?? '' }}">
    </div>

    <div class="col-md-4">
        <label>Matriz</label>
        <input type="text" id="matriz" class="form-control"
               value="{{ sucursal.matriz ?? '' }}">
    </div>

    <div class="col-md-4">
        <label>Sucursal</label>
        <input type="text" id="sucursal" class="form-control"
               value="{{ sucursal.sucursal ?? '' }}">
    </div>

    <div class="col-md-4">
        <label>Correo</label>
        <input type="email" id="correo" class="form-control"
               value="{{ sucursal.correo ?? '' }}">
    </div>

    <div class="col-md-4">
        <label>Teléfono</label>
        <input type="text" id="telefono" class="form-control"
               value="{{ sucursal.telefono ?? '' }}">
    </div>

    <div class="col-md-4">
        <label>Lleva Contabilidad</label>
        <select id="lleva_cont" class="form-control">
            <option value="SI" {{ sucursal is not null and sucursal.llevaCont == 'SI' ? 'selected' }}>Sí</option>
            <option value="NO" {{ sucursal is not null and sucursal.llevaCont == 'NO' ? 'selected' }}>No</option>
        </select>
    </div>

    <div class="col-md-4">
        <label>Estado</label>
        <select id="estado" class="form-control">
            <option value="1" {{ sucursal is not null and sucursal.estado == 1 ? 'selected' }}>Activo</option>
            <option value="0" {{ sucursal is not null and sucursal.estado == 0 ? 'selected' }}>Inactivo</option>
        </select>
    </div>

</div>
